<div data-hook="admin_gift_card_form_fields" class="row clearfix">
  <div class="alpha five columns">
    <%= f.field_container :email do %>
      <%= f.label :email %><br/>
      <%= f.text_field :email, :class => "fullwidth" %>
      <%= f.error_message_on :email %>
    <% end %>
  </div>
  <div class="five columns">
    <%= f.field_container :name do %>
      <%= f.label :name %> <span class="required">*</span><br/>
      <%= f.text_field :name, :class => "fullwidth" %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div class="omega five columns">
    <% unless params[:action] == "edit" %>
      <%= f.field_container :count do %>
        <%= f.label :count %> <span class="required">*</span><br/>
        <%= f.text_field :count, :class => "fullwidth", value: 1 %>
        <%= f.error_message_on :count %>
      <% end %>
    <% end %>
  </div>

  <div class="clear"></div>

  <div class="alpha five columns">
    <%= f.field_container :note do %>
      <%= f.label :note %>
      <%= f.text_field :note, :class => "fullwidth" %>
      <%= f.error_message_on :note %>
    <% end %>
  </div>

  <div class="omega five columns">
    <%= f.field_container :variant_id do %>
      <%= f.label :variant_id, Spree.t(:value) %> <span class="required">*</span><br/>
      <%= f.select :variant_id, @gift_card_variants.map { |v| [number_to_currency(v.price), v.id] }, {}, disabled: (f.object.present? && !f.object.new_record?), :class => 'select2' %>
    <% end %>
  </div>

  <div class="clear"></div>

  <div class="alpha five columns">
    <%= f.field_container :liability do %>
      <%= f.label :liability %>
      <%= f.text_field :liability %>
      <%= f.error_message_on :liability %>
    <% end %>
  </div>

  <div class="five columns">
    <%= f.field_container :expires_at do %>
      <%= f.label :expires_at %>
      <%= f.text_field :expires_at, :value => datepicker_field_value(@gift_card.expires_at), :class => 'datepicker' %>
      <%= f.error_message_on :expires_at  %>
    <% end %>
  </div>
</div>
