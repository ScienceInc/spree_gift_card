<% content_for :page_title do %>
  <%= Spree.t(:gift_cards) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_gift_cards), new_object_url, :icon => 'icon-plus' %>
  </li>
<% end %>

<%= form_tag(admin_gift_card_search_path, method: :get) do %>
  <div class="alpha nine columns">
    <div class="field">
      <%= label_tag "Find By Code" %>
      <%= text_field_tag :code %>
      <%= submit_tag  Spree.t(:search) %>
    </div>

  </div>
<% end %>

<table class="index">
  <thead>
    <tr>
      <th><%= Spree.t(:code) %></th>
      <th>Valid?</th>
      <th><%= Spree.t(:original_value) %></th>
      <th><%= Spree.t(:current_value) %></th>
      <th><%= Spree.t(:email) %></th>
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:note) %></th>
      <th style="width:150px;"><%= Spree.t(:action) %></th>
    </tr>
  </thead>
  <tbody>
    <% @gift_cards.each do |card| %>
      <tr id="<%= spree_dom_id card %>">
        <td><%= card.code %></td>
        <td><%= card.line_item.nil? || card.line_item.order.complete? %></td>
        <td><%= number_to_currency card.original_value %></td>
        <td><%= number_to_currency card.current_value %></td>
        <td><%= card.email %></td>
        <td><%= card.name %></td>
        <td><%= card.note %></td>
        <td class="actions">
          <%= link_to_edit card %> &nbsp;
          <%= link_to_delete card %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @gift_cards %>
